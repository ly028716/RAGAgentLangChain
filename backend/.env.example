# Application Settings
APP_NAME=AI智能助手系统
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/ai_assistant
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Security
BCRYPT_ROUNDS=12

# Login Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# Tongyi Qianwen API
DASHSCOPE_API_KEY=your-dashscope-api-key-here
TONGYI_MODEL_NAME=qwen-turbo
TONGYI_TEMPERATURE=0.7
TONGYI_MAX_TOKENS=2000

# Vector Database (Chroma)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=documents

# Embeddings
EMBEDDING_MODEL=text-embedding-v1

# File Upload
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=10

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# User Quota
DEFAULT_MONTHLY_QUOTA=100000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_LLM_PER_MINUTE=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Background Tasks
ENABLE_SCHEDULER=True
QUOTA_RESET_CRON=0 0 1 * *

# WebSocket
WS_HEARTBEAT_INTERVAL=30
